<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.gunjal.prahlad.prahladgunjal.info3">


    <LinearLayout
        android:id="@+id/info1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#F3F3F3"
        android:elevation="4dp"
        android:transitionName="@string/simple3"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#F3F3F3">

            <ImageView
                android:id="@+id/info3image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:transitionName="@string/image3"
                android:scaleType="centerCrop"
                android:src="@drawable/pic4" android:foreground="@drawable/tint"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/info3image"
                android:layout_marginLeft="32dp"
                android:fontFamily="sans-serif-condensed"
                android:background="#00000000"
                android:text="components" android:layout_marginBottom="16dp"
                android:id="@+id/text"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="40sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"

                android:background="#F3F3F3"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="8dp"
                    android:background="#F3F3F3"
                    android:fontFamily="sans-serif-condensed"


                    android:padding="4dp"
                    android:text="arduino\nbread board\nresistors and switch \nbuzzer\nldr and led\nconnecting wires"
                    android:textAllCaps="true"
                    android:textColor="#494949"
                    android:textSize="20sp"
                    android:id="@+id/text1"
                    android:textStyle="italic" />


            </LinearLayout>

        </ScrollView>
    </LinearLayout>







</RelativeLayout>

